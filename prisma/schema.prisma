generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["user-service"]
}

enum UserState {
  active
  blocked

  @@schema("user-service")
}

enum Role {
  user
  admin

  @@schema("user-service")
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  name          String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  state         UserState       @default(active)
  role          Role            @default(user)
  UserMetadata  UserMetadata?
  UserFollows   UserFollows[]
  UserPushToken UserPushToken[]
  Notification  Notification[]

  @@schema("user-service")
}

enum Interests {
  Outdoor
  Indoor
  Gym
  Cardio
  Groups
  Solo
  Intense
  Relaxing

  @@schema("user-service")
}

model UserMetadata {
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    Int         @id
  weight    Int?
  height    Int?
  birthDate DateTime?
  location  String
  interests Interests[]
  multimedia Multimedia[]

  @@schema("user-service")
}

model Multimedia {
  id        Int      @id @default(autoincrement())
  url       String
  type      String
  userId    Int
  userMetadata UserMetadata? @relation(fields: [userId], references: [userId])

  @@schema("user-service")
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  userId    Int
  date      DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@schema("user-service")
}

model UserFollows {
  userId     Int
  followedId Int
  User       User @relation(fields: [userId], references: [id])

  @@id([userId, followedId])
  @@schema("user-service")
}

model UserPushToken {
  token  String @unique
  userId Int
  User   User   @relation(fields: [userId], references: [id])

  @@id([userId])
  @@schema("user-service")
}
